<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="10dp">

    <EditText
        android:id="@+id/add_task_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter Task"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/add_task_description_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_task_et"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Description (Optional)"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_due_date"
        android:textColor="@color/logo_purple"
        android:text="Set Due Date"
        android:textSize="14sp"
        android:drawablePadding="8dp"
        android:layout_below="@id/add_task_description_et"
        android:layout_marginStart="20dp"
        app:drawableEndCompat="@drawable/baseline_calendar_month_24" />
    
    <Button
        android:id="@+id/addTaskBtn"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:text="SAVE"
        android:background="@color/logo_purple"
        android:layout_below="@id/add_task_description_et"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>
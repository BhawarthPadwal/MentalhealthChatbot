<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/completed_task_ll"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:background="@color/white"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/completed_task2"
            android:padding="10dp"
            android:contentDescription="@string/logo" />

        <TextView
            android:id="@+id/comp_task_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/kufam"
            android:layout_marginStart="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/comp_task_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="14sp"
        android:layout_marginStart="55dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:fontFamily="@font/kufam"
        android:maxLines="2" />

    <TextView
        android:id="@+id/comp_task_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON DATE 20/02/2024"
        android:layout_gravity="end"
        android:textSize="12sp"
        android:fontFamily="@font/kufam"
        android:textColor="@color/logo_purple"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"/>



</LinearLayout>
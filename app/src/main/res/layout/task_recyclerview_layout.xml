<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/round_social"
    android:backgroundTint="@color/white"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/task_dayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Mon"
            android:textColor="@color/black"
            android:fontFamily="@font/kufam"
            android:gravity="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/task_dayOfMonth"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="15"
            android:textColor="@color/black"
            android:fontFamily="@font/kufam"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/task_month"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Feb"
            android:textColor="@color/black"
            android:fontFamily="@font/kufam"
            android:gravity="center"
            android:layout_gravity="center"/>


    </LinearLayout>

    <View
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>
    
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <TextView
            android:id="@+id/task_title_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/kufam"
            android:text="Task Title"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/task_options"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/task_title_tv"
            android:src="@drawable/kebab_icone"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/task_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_title_tv"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/kufam"
            android:textColor="@color/black"
            android:text="Task Description" />

        <TextView
            android:id="@+id/task_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_description_tv"
            android:text="at 12:50"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/kufam" />

        <TextView
            android:id="@+id/task_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_time_tv"
            android:text="Upcomming"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/kufam" />
        
    </RelativeLayout>

</LinearLayout>